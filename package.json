{
  "name": "prattler",
  "version": "1.1.6",
  "description": "a simple way to chat with your friends",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "webpack --config webpack.common.js --watch",
    "build": "webpack --config webpack.prod.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac",
    "make:win": "electron-builder --win --x64"
  },
  "author": "Edward Suomin",
  "license": "MIT",
  "build": {
    "productName": "Prattler",
    "appId": "com.suomin.prattler",
    "files": [
      "build/**/*",
      "assets/**/*",
      "menu/**/*",
      "index.html",
      "splash.html",
      "splash.css",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/prattlerIcon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 140,
          "y": 240
        },
        {
          "x": 440,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/images/prattlerIcon.png",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    }
  },
  "devDependencies": {
    "dotenv-webpack": "^7.0.3",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-reload": "^1.5.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@bem-react/classname": "^1.5.11",
    "@material-ui/core": "^4.12.1",
    "@reduxjs/toolkit": "^1.6.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/webpack-env": "^1.16.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.6",
    "file-loader": "^6.2.0",
    "firebase": "^8.7.1",
    "flatlist-react": "^1.5.0",
    "formik": "^2.2.9",
    "modern-normalize": "^1.1.0",
    "moment": "^2.29.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-lottie": "^1.2.3",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "source-map-loader": "^3.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.2.4",
    "typescript": "^4.3.5",
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "yup": "^0.32.9"
  }
}
